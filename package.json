{
  "name": "@maeum/logging-controller",
  "version": "1.0.0-beta.0",
  "description": "maeum logging controller",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rimraf dist",
    "debug": "node --inspect-brk -r ts-node/register src/cli.ts",
    "ctix": "ctix single -p ./tsconfig.prod.json --config .configs/.ctirc -g .configs/.ctiignore",
    "ctix:remove": "rimraf src/index.ts",
    "dts": "tsc --project tsconfig.prod.json --declaration --emitDeclarationOnly --declarationDir dist/types/origin",
    "dts-gen": "rollup --config ./.configs/rollup.mjs",
    "dts:clean": "rimraf dist/types/origin",
    "build": "pnpm run clean && tsc --incremental --noEmit --project tsconfig.json --tsBuildInfoFile .tsbuildinfo",
    "esbuild-cjs": "FORMAT=cjs node .configs/esbuild.mjs",
    "esbuild-esm": "FORMAT=esm node .configs/esbuild.mjs",
    "bundle-pack": "pnpm run ctix && run-p esbuild-cjs esbuild-esm dts && run-p ctix:remove",
    "bundle": "run-s clean bundle-pack dts-gen dts:clean",
    "test": "vitest run --coverage",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "pub": "pnpm publish --registry http://localhost:8901",
    "unpub": "pnpm unpublish @maeum/logging-controller@$npm_package_version --registry http://localhost:8901 --force",
    "pub:prod": "pnpm run bundle && RELEASE_MODE=true pnpm publish --access=public",
    "dd": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'",
    "prepublishOnly": "node prepublish.cjs",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maeumjs/logging-controller.git.git"
  },
  "keywords": [
    "maeum",
    "logging",
    "logging-controller"
  ],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/cjs/index.cjs",
        "types": "./dist/types/index.d.ts"
      },
      "import": {
        "default": "./dist/esm/index.mjs",
        "types": "./dist/types/index.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/maeumjs/logging-controller.git/issues"
  },
  "homepage": "https://github.com/maeumjs/logging-controller.git#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/debug": "^4.1.8",
    "@types/node": "^18.11.9",
    "@types/source-map-support": "^0.5.7",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitest/coverage-istanbul": "^0.34.5",
    "@vitest/coverage-v8": "^0.34.5",
    "@vitest/ui": "^0.34.5",
    "cross-env": "^7.0.3",
    "ctix": "^1.8.2",
    "deps-diff": "^1.0.2",
    "esbuild": "0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "fastify": "^4.23.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "pino": "^8.15.1",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.3",
    "rollup-plugin-dts": "^6.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.2",
    "type-fest": "^4.3.1",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.5"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.9",
    "debug": "^4.3.4",
    "fastify-plugin": "^4.5.1",
    "http-status-codes": "^2.3.0",
    "jin-curlize": "^1.3.1",
    "my-easy-fp": "^0.21.0",
    "my-node-fp": "^0.9.0",
    "snappy": "^7.2.2",
    "winston": "^3.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  },
  "peerDependencies": {
    "fastify": "^4.23.2",
    "pino": "^8.15.1"
  }
}
